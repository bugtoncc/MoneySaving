@*@model IEnumerable<MoneySaving.Models.FundTransaction>*@
@model MoneySaving.Models.MainFundTransaction

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-5">
        <form asp-controller="FundTransactions" asp-action="Index" method="get">
            <div class="form-row align-items-center">
                <div class="col-auto">
                    <input id="txtKeyword" asp-for="QueryFundKeyword" type="text" placeholder="search fund" class="form-control form-control-sm" autocomplete="off" />
                </div>
                <div class="col-auto">
                    <input type="submit" class="btn btn-sm btn-outline-secondary" value="Search" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-5">
        <form asp-controller="FundTransactions" asp-action="Create" method="get">
            <div class="form-group">
                <select asp-for="QueryFundSelected" asp-items="Model.FundSelectListFilter" class="form-control form-control-sm">
                </select>
            </div>
            <div class="form-row align-items-center">
                <div class="col-auto">
                    <select asp-for="QueryFundFlowSelected" asp-items="Model.FundFlowTypeSelectListFilter" class="form-control form-control-sm"></select>
                </div>
                <div class="col-auto">
                    <input type="submit" class="btn btn-sm btn-primary" value="Go" />
                </div>
            </div>
        </form>
    </div>
</div>


<table class="table mt-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].TransactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].Nav)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].NavConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].LastUpdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].FundPort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].MFundFlowType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FundTransactions[0].MFund)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FundTransactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nav)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Units)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NavConfirmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FundPort.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MFundFlowType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MFund.Abbr)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
