@model MoneySaving.Models.TransferMoney

@{
    ViewData["Title"] = "Transfer";
}

<h2>Transfer money</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Transfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PocketFromId" class="control-label"></label>
                <select asp-for="PocketFromId" class="form-control" asp-items="ViewBag.PocketFrom"></select>
            </div>
            <div class="form-group">
                <label asp-for="PocketToId" class="control-label"></label>
                <select asp-for="PocketToId" class="form-control" asp-items="ViewBag.PocketTo"></select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>