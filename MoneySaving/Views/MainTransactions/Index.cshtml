@*@model IEnumerable<MoneySaving.Models.MainTransaction>*@
@model MoneySaving.Models.MainViewModel

@{
    ViewData["Title"] = "Index";
}
<h4>Balance</h4>

@foreach (var item in Model.Pockets)
{
    <span class="badge badge-primary mr-2">@Html.DisplayFor(modelItem => item.Name) -- @Html.DisplayFor(modelItem => item.Balance)</span>
}

<hr />

<h4>Transaction</h4>

<form asp-controller="MainTransactions" asp-action="Index" method="get">
    <select asp-for="QueryPocket" asp-items="Model.PocketsSelectList">
        <option value="">All</option>
    </select>
    <input type="submit" value="Filter" />
</form>
<br />
<p>
    @*<a asp-action="Create">เพิ่มรายรับ</a>
        <a asp-action="Create" class="ml-2">เพิ่มรายจ่าย</a>*@
    <a href="/MainTransactions/Create?id=7">เพิ่มรายรับ</a>
    <a href="/MainTransactions/Create?id=8" class="ml-2">เพิ่มรายจ่าย</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainTransactions[0].TransactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainTransactions[0].MPocket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainTransactions[0].MCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainTransactions[0].Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainTransactions[0].Amount)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.StatusFlag)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastUpdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateBy)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MainTransactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MPocket.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.StatusFlag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateBy)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
