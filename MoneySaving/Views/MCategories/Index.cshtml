@*@model IEnumerable<MoneySaving.Models.MCategory>*@
@model MoneySaving.Models.CategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="MCategories" asp-action="Index">
    <p>
        <select asp-for="CategoryCashflowType" asp-items="Model.CashflowTypeName">
            <option value="">All</option>
        </select>

        Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].CashflowType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].StatusFlag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].LastUpdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].UpdateBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashflowType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusFlag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateBy)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
